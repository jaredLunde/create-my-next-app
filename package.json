{
  "private": true,
  "name": "next-app",
  "version": "0.1.0",
  "scripts": {
    "build": "next build",
    "check-types": "tsc --noEmit",
    "dev": "next dev",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "prepare": "husky install",
    "start": "next start",
    "test": "jest --config .jest/config.js"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@dash-ui/compound": "^0.1.4",
    "@dash-ui/jest": "^2.1.2",
    "@dash-ui/layout": "0.1.2",
    "@dash-ui/mq": "^0.4.1",
    "@dash-ui/react": "^0.9.1",
    "@dash-ui/reset": "^0.3.1",
    "@dash-ui/responsive": "^0.2.3",
    "@dash-ui/styles": "^0.8.9",
    "@dash-ui/transition": "^0.4.0",
    "@next/eslint-plugin-next": "^12.0.1",
    "@split-tests/jest": "^0.1.0",
    "@swc-node/core": "^1.7.0",
    "@swc-node/jest": "^1.3.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0-alpha.1",
    "@testing-library/react-hooks": "^8.0.0-alpha.1",
    "@testing-library/user-event": "^14.0.0-alpha.3",
    "@types/jest": "^27.0.2",
    "@types/node": "16.11.6",
    "@types/react": "^17.0.33",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-lunde": "^0.6.0",
    "eslint-config-next": "^12.0.1",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-junit": "^13.0.0",
    "lint-staged": "^11.2.6",
    "next": "^12.0.1",
    "next-router-mock": "^0.5.3",
    "prettier": "^2.4.1",
    "prettier-package-json": "^2.6.0",
    "react": "18.0.0-alpha-6c3dcc7a4-20211027",
    "react-dom": "18.0.0-alpha-6c3dcc7a4-20211027",
    "typedoc": "^0.22.7",
    "typescript": "^4.4.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest-junit": {
    "output": "./junit.xml",
    "ancestorSeparator": " › ",
    "suiteNameTemplate": "`{title}` — _{filepath}_"
  },
  "lint-staged": {
    "package.json": [
      "prettier-package-json --write"
    ],
    "**/*.{ts,tsx,js,jsx,html,md,mdx,yml,json}": [
      "prettier --write"
    ],
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --ext .js,.ts,.tsx- --fix"
    ]
  }
}
